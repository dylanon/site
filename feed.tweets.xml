<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
	<channel>
		<title>{{ site.title | xml_escape }} - Tweets for IFTTT</title>
		<description>These microblog posts will be cross-posted to Twitter in plain text only</description>
		<link>{{ site.url }}</link>
		<atom:link href="{{ site.url }}/{{ page.path }}" rel="self" type="application/rss+xml" />

		{% for post in site.tags.micropost %}
			{% if tweet_counter == 10 or post.crosspost == false %}
				{% break %}
			{% else %}
				{% if post.link or post.picture %}
					{% continue %}
				{% elsif post.tags contains 'tweet' %}
					<item>
						<title>{{ post.title | xml_escape }}</title>
							<description>{{ post.content | strip_html }} {{ post.hashtags | xml_escape }}</description>
						<pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
						<link>{{ site.url }}{{ post.url }}</link>
						<guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
					</item>
					{% assign tweet_counter = tweet_counter | plus: 1 %}
				{% endif %}
			{% endif %}
		{% endfor %}
	</channel>
</rss>
